{
  "name": "@secure-notebook/desktop",
  "version": "1.0.0",
  "private": true,
  "description": "Secure Notebook 桌面客户端",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently \"pnpm --filter @secure-notebook/web dev\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "pnpm --filter @secure-notebook/web build && tsc && node scripts/copy-web.js && electron-builder",
    "build:win": "pnpm --filter @secure-notebook/web build && tsc && node scripts/copy-web.js && electron-builder --win",
    "build:mac": "pnpm --filter @secure-notebook/web build && tsc && node scripts/copy-web.js && electron-builder --mac",
    "build:linux": "pnpm --filter @secure-notebook/web build && tsc && node scripts/copy-web.js && electron-builder --linux",
    "clean": "rimraf dist release"
  },
  "build": {
    "appId": "com.securenotebook.app",
    "productName": "Secure Notebook",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "assets/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.0",
    "wait-on": "^7.2.0"
  }
}
